@model Genesis.Escola.MVC.Models.CursoViewModel
@using static Genesis.Escola.MVC.Functions.Enumeradores.EnumCurso;

@{
    if (Model.Curso == EducacaoInfantil) { ViewData["Title"] = "Educação Infantil"; }
    else if (Model.Curso == EnsinoMedio) { ViewData["Title"] = "Ensino Médio"; }
    else if (Model.Curso == FundamentalI) { ViewData["Title"] = "Ensino Fundamental I"; }
    else if (Model.Curso == FundamentalII) { ViewData["Title"] = "Ensino Fundamental II"; }
    else { ViewData["Title"] = "Técnico"; }
    ViewData["Title"] = "Incluir Curso";
}


<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>@Html.Raw(@Model.Titulo)</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="courses-details-area blog-area pt-30 pb-20">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="courses-details">
                    <div class="course-details-content">
                        <p align="justify"> @Html.Raw(@Model.Descricao)  </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
