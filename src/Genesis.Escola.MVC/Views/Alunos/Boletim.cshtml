@model IEnumerable<Genesis.Escola.MVC.Models.NotasViewModel>

@{
    ViewData["Title"] = "Boletim";
    Layout = "~/Views/Shared/_LayOutAluno.cshtml";
}

<div class="about-area pt-1 pb-1">
    <div class="row">
        <div class="col-md-8 col-sm-8">
            <div class="about-content">
                <h2>Boletim <span></span></h2>
            </div>
        </div>
    </div>
</div>

<div class="teacher-area pb-150">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <table class="table table-striped table-bordered responsive dataex-res-configuration" cellspacing="0" id="Tabela1">
                <thead>
                    <tr>
                        <th rowspan="1"></th>
                        <th colspan="5" class="text-center">Notas</th>
                        <th colspan="3" class="text-center">Resultado Final</th>
                        <th colspan="5" class="text-center">Faltas</th>
                    </tr>
                    <tr>
                        <th style="width:10%;">
                            <div><h4>Matérias</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>1&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>2&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>3&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>4&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>Média</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>Rec.</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>M.Final</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>Situação</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>1&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>2&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>3&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>4&ordm;B</h4></div>
                        </th>
                        <th style="width:3%;">
                            <div><h4>Total</h4></div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Materia)
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal valor;
                                    decimal.TryParse(item.Nota1b, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.Nota1b)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Nota1b)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.Nota2b, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.Nota2b)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Nota2b)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.Nota3b, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.Nota3b)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Nota3b)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.Nota4b, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.Nota4b)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Nota4b)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.MediaNota, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.MediaNota)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.MediaNota)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.RecuperacaoResultFinal, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.RecuperacaoResultFinal)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.RecuperacaoResultFinal)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @{
                                    decimal.TryParse(item.MediaFinalResultFinal, out valor);
                                    if (valor < 6)
                                    {
                                        <span class="textoRealce-D">
                                            @Html.DisplayFor(modelItem => item.MediaFinalResultFinal)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.MediaFinalResultFinal)
                                    }
                                }
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.SituacaoResultFinal)
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.Faltas1b)
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.Faltas2b)
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.Faltas3b)
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.Faltas4b)
                            </td>
                            <td class="alinhadoDireita">
                                @Html.DisplayFor(modelItem => item.FaltasTotal)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/extensions/responsive.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/extensions/colReorder.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/extensions/buttons.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/datatable/buttons.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/Administrar/app-assets/vendors/css/tables/extensions/fixedHeader.dataTables.min.css">
    <style>
        table#Tabela1 th {
            background-color: #3E4095;
            color: white;
            font-size: 10px;
        }

        table#Tabela1 td {
            font-size: 10px;
        }

        table#Tabela1 tr:nth-child(even) {
            background-color: #a4e8ca;
        }

        table#Tabela1 tr:nth-child(odd) {
            background-color: #fff;
        }

        .alinhadoEsquerda {
            text-align: left;
        }

        .alinhadoCentro {
            text-align: center;
        }

        .alinhadoDireita {
            text-align: right;
        }

        .textoRealce-D {
            color: red;
        }
    </style>
}

@section Scripts
{
    <script src="~/Administrar/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <script src="~/Administrar/app-assets/vendors/js/tables/datatable/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/Administrar/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js" type="text/javascript"></script>
    <script src="~/Administrar/app-assets/vendors/js/tables/datatable/dataTables.fixedHeader.min.js" type="text/javascript"></script>

    <script src="~/Administrar/app-assets/js/scripts/tables/IniciarTables.js" type="text/javascript"></script>

}

