@model Genesis.Escola.MVC.Models.AlunosViewModel
@{
    ViewData["Title"] = "Editar Alunos";
}


<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home" )">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        Páginas
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Aluno" )">Listagem de Aluno</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Visualizar Aluno
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header btn-primary ">
        <h4 class="card-title" id="horz-layout-basic">Visualizar Aluno</h4>
        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
    </div>
    <div class="card-content collpase show">
        <div class="card-body">

            <form asp-action="Editar">
                <input asp-for="Id" class="form-control" type="text" hidden="hidden" />
                <div asp-validation-summary="All" class="text-danger" />

                <div class="form-group has-success">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="Matricula" class="col-form-label"></label>
                                <input asp-for="Matricula" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Matricula" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Nome" class="col-form-label"></label>
                                <input asp-for="Nome" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="Senha" class="col-form-label"></label>
                                <input asp-for="Senha" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Numero" class="col-form-label"></label>
                                <input asp-for="Numero" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="col-form-label">Turma</label>
                                <div class="form-control">
                                    @ViewBag.Turma
                                </div>
                            </div>

                            @*<div class="col-md-4">
            <label asp-for="Turma" class="col-form-label"></label>
            <select asp-for="TurmaId"
                    asp-items="@ViewBag.Turma" class="form-control"></select>
        </div>*@

                        </div>
                        <br />
                        <div class="row">
                            <fieldset class="checkbox">
                                <label class="col-form-label">
                                    Ativo
                                    <input asp-for="Ativo" />

                                </label>
                            </fieldset>
                        </div>
                    </div>
                    <div class="form-actions">
                        <a href="@Url.Action("Index", "Aluno")" class="btn btn-outline-warning mr-1">
                            Retornar <span class="ft-x"></span>
                        </a>
                        @*<button class="btn btn-icon btn-outline-primary waves-effect waves-light width-md" type="submit">
                            <span>Salvar</span>
                            <i class="fa fa-check-square-o"></i>
                        </button>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


