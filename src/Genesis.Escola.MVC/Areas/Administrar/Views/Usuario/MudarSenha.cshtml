@model Genesis.Escola.MVC.Areas.Administrar.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Alterar a Senha";
}


<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home" )">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        Páginas
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Usuario" )">Listagem de Usuários</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Mudar Senha
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header btn-primary ">
        <h4 class="card-title" id="horz-layout-basic">Mudar Senha</h4>
        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
    </div>
    <div class="card-content collpase show">
        <div class="card-body">

            <form asp-action="MudarSenha">
                <input asp-for="Id" class="form-control" type="text" hidden="hidden" />
                <div asp-validation-summary="All" class="text-danger" />


                <div class="form-group has-success">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="UserName" class="col-form-label">Nome Usuário:</label>
                                <input asp-for="UserName" class="form-control" readonly />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="Password" class="col-form-label"></label>
                                <input asp-for="Password" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                            </div>
                        </div>
                        <br />

                        <br />

                    </div>
                    <div class="form-actions">
                        <a href="@Url.Action("Index", "Usuario")" class="btn btn-outline-warning mr-1">
                            Retornar <span class="ft-x"></span>
                        </a>
                        <button class="btn btn-icon btn-outline-primary waves-effect waves-light width-md" type="submit">
                            <span>Salvar</span>
                            <i class="fa fa-check-square-o"></i>
                        </button>
                    </div>
                </div>



            </form>
        </div>
    </div>
</div>

