<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="Sistema Escolar">
    <meta name="keywords" content="Gênesis Software">
    <meta name="author" content="Ulisses Correia de Araújo Neto">
    <title>@ViewBag.Title - Sistema Escolar</title>
    <partial name="_Design" />
    @RenderSection("Styles", required: false)

    <style>
        .custom-file-input ~ .custom-file-label::after {
            content: "Selecionar";
        }
    </style>

</head>
<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar"
      data-open="click" data-menu="vertical-menu" data-col="2-columns">
    <partial name="_TopBar" />
    <partial name="_LeftMenu" />
    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body">
                <section id="horizontal-form-layouts">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <partial name="_Footer" />





    <!-- BEGIN VENDOR JS-->
    <script src="~/Administrar/app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
    <!-- BEGIN VENDOR JS-->

    <!-- BEGIN PAGE VENDOR JS-->
    <script type="text/javascript" src="~/Administrar/app-assets/vendors/js/ui/prism.min.js"></script>
    <!-- END PAGE VENDOR JS-->
    <!-- BEGIN STACK JS-->
    <script src="~/Administrar/app-assets/js/core/app-menu.min.js" type="text/javascript"></script>
    <script src="~/Administrar/app-assets/js/core/app.min.js" type="text/javascript"></script>
    <script src="~/Administrar/app-assets/js/scripts/customizer.min.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
